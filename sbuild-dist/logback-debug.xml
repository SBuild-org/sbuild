<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>

  <logger name="de.tototec" level="TRACE" />
  <logger name="org.sbuild.execute.TargetExecutor$DependencyCache" level="INFO" />
  <logger name="org.sbuild.OutputStreamCmdlineMonitor" level="DEBUG" />
  <logger name="org.sbuild.NoopCmdlineMonitor" level="DEBUG" />
  <logger name="org.sbuild.runner.ProjectScript" level="DEBUG" />
  <logger name="org.sbuild.execute.TargetExecutor" level="DEBUG" />
  <logger name="org.sbuild.execute.LoggingTransientTargetCache" level="INFO" />
  <logger name="org.sbuild.BuildFileProject" level="DEBUG" />
  <logger name="org.sbuild.ExportDependencies" level="DEBUG" />
  <logger name="org.sbuild.runner.SBuildRunner" level="DEBUG" />
  <logger name="org.sbuild.internal.I18n" level="WARN" />


</configuration>
